@model CategoryDTO

<div class="tab-content">
    <div class="tab-pane show active mt-3 mx-3" id="form-row-preview">
        <form asp-action="Add" asp-controller="Category" method="post">
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" type="text" class="form-control" />
                </div>
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    <label asp-for="@Model.Icon" class="form-label"></label>
                    <input asp-for="@Model.Icon" type="text" class="form-control" />
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <button type="submit" class="btn btn-success">Kategori Ekle</button>
        </form>

    </div> <!-- end preview-->
</div> <!-- end tab-content-->
