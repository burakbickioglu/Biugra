@{
}
@model List<CategoryDTO>
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    Kategoriler
                </h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    

                    <div class="table-responsive">
                        <div class="col-xl">
                            <div class="text-xl-end mt-xl-0 mt-2">
                                <a asp-controller="Category" asp-action="Add" type="button" class="btn btn-success mb-2 me-2"><i class="mdi mdi-plus me-1"></i>Kategori Ekle</a>

                            </div>
                        </div>
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>İkon</th>
                                    <th style="width: 125px;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model != null)
                                        foreach (var item in @Model)
                                        {
                                            <tr>
                                                <td>
                                                    <h5>@item.Name</h5>

                                                </td>
                                                <td>
                                                    <h5><i class="@item.Icon"></i></h5>

                                                </td>
                                                <td>
                                                    <a asp-controller="Category" asp-action="Update" asp-route-id=@item.Id class="action-icon"> <i class="mdi mdi-square-edit-outline"></i></a>
                                                    <a asp-controller="Category" asp-action="Remove" asp-route-id=@item.Id class="action-icon"> <i class="mdi mdi-delete"></i></a>

                                                </td>
                                            </tr>

                                        }
                                }
                            </tbody>
                        </table>
                    </div>
                </div> <!-- end card-body-->
            </div> <!-- end card-->
            
        </div> <!-- end col -->
    </div>
    <!-- end row -->

</div> <!-- container -->