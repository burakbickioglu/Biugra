@using Biugra.BackOffice.Models
@using Biugra.Domain.Models.Dtos.Teacher
@using Biugra.Domain.Enums
@model AddProvidedServiceViewModel
<div class="tab-content">
    <div class="tab-pane show active mt-3 mx-3" id="form-row-preview">
        <form asp-action="Add" asp-controller="ProvidedService" method="post">
            <div class="row g-2">
                <div class="mb-3 col-md-10">
                    <label asp-for="@Model.ProvidedService.Title" class="form-label"></label>
                    <input asp-for="@Model.ProvidedService.Title" type="text" class="form-control" />
                </div>
               
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-10">
                    <label asp-for="@Model.ProvidedService.Description" class="form-label"></label>
                    <textarea rows="7" asp-for="@Model.ProvidedService.Description" class="form-control" ></textarea>
                </div>
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-10">
                    <label asp-for="@Model.ProvidedService.Price" class="form-label"></label>
                    <input type="number" asp-for="@Model.ProvidedService.Price" class="form-control" />
                </div>
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    <label class="form-label">Öğretmen</label>
                    @Html.DropDownListFor(M => M.ProvidedService.TeacherId, new SelectList(Model.Teachers,"Id", "Fullname","Öğretmen Seçiniz"), new{@class="form-select"})
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <button type="submit" class="btn btn-primary">Hizmet Ekle</button>
        </form>
    </div> <!-- end preview-->


</div> <!-- end tab-content-->
