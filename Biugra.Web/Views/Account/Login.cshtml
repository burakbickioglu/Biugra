@model LoginRequestDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Log In | Hyper - Responsive Bootstrap 5 Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Theme Config Js -->
    <script src="~/assets/js/hyper-config.js"></script>

    <!-- App css -->
    <link href="~/assets/css/app-saas.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- Icons css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="authentication-bg">
    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-5">
                    <div class="card">

                        <!-- Logo -->
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <span class="logo-lg">
                                <h1 style="color:white">Biugra</h1>
                            </span>
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center pb-0 fw-bold">Giriş Yap</h4>
                                <p class="text-muted mb-4">Kullanıcı paneline erişmek için e-posta adresinizi ve şifrenizi girin.</p>
                            </div>

                            <form method="post" asp-action = "Login" asp-controller = "Account">  

                                <div class="mb-3">
                                    <label class="form-label" asp-for="@Model.Email"></label>
                                    <input class="form-control" asp-for="@Model.Email" type="email" id="emailaddress" required="" placeholder="E-mail adresinizi giriniz">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="@Model.Password"></label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" id="password" asp-for="@Model.Password" class="form-control" placeholder="Şifrenizi giriniz">
                                        <div class="input-group-text" data-password="false">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                </div>

                               
                                <div asp-validation-summary="All" class="text-danger"></div>


                                <div class="mb-3 mb-0 text-center">
                                    <button class="btn btn-primary" asp-action="Login" asp-controller="Account" type="submit">Giriş Yap</button>
                                </div>

                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Hesabın yok mu ? <a asp-action="register" asp-controller="account" class="text-muted ms-1"><b>Kayıt Ol</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <footer class="footer footer-alt">
        © Biugra - Biugra.com
    </footer>
    <!-- Vendor js -->
    <script src="~/assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.min.js"></script>

</body>
</html>
